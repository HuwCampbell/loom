#!/bin/sh -eu

. test/cli/core/env.sh

cd test/cli/build
rm -rf dist
$LOOM build

file_exists() {
  if [ ! -e "$1" ]; then
    "Could not find $1"
  fi
}

file_exists "dist/test_build/scss/build.css"
file_exists "dist/test_build/components/c1/component.css"
file_exists "dist/src/TestBuild/Components/C1/Component.hs"
