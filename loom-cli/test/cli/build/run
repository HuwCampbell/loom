#!/bin/sh -eu

. test/cli/core/env.sh

cd test/cli/build
rm -rf dist
$LOOM build

file_exists() {
  if [ ! -e "$1" ]; then
    "Could not find $1"
  fi
}

file_exists "dist/test_build.css"
file_exists "dist/src/Library/Components/C1/Component.hs"
file_exists "dist/src/Library/Components/C1/Data.hs"
file_exists "dist/src/TestBuild/Components/C2/Component.hs"
file_exists "dist/src/TestBuild/Components/C2/Data.hs"
